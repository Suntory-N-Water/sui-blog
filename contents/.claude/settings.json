{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": ["Read(*.md)", "Bash(bun run:*)", "Bash(python3:*)", "WebFetch", "WebSearch"],
    "deny": ["Bash(rm -rf:*)", "Bash(sudo:*)", "Read(.env.*)", "Write(.env*)"],
    "ask": [
      "Bash(git push:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(bun add:*)",
      "Bash(bun remove:*)",
      "Bash(rm:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node ~/.claude/scripts/statusline.js"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          },
          {
            "type": "command",
            "command": "bun run --silent -i ~/.claude/scripts/typescript/fix-brackets.ts"
          }
        ]
      }
    ]
  }
}
